doctype html
html
  head
    include head
  body
    header.head
      div.inner
        h1.head-title: a(href = config.root)= config.title
        include nav
    main.content
      div.main
        block main
    footer.foot
      block menu
      div.foot-copy.u-fl
        != '&copy; ' + date(new Date(), 'YYYY') + ' ' + (config.author || config.title)
        if theme.themes_mata
          bdi
            != theme.themes_mata      
    include foot